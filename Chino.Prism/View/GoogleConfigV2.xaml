<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Chino.Prism.View.GoogleConfigV2"
    xmlns:views="clr-namespace:Chino.Prism.View">
    <ContentView.Content>
        <StackLayout>
            <Label Text="GoogleDiagnosisKeysDataMapping" FontSize="Medium" Padding="0, 8, 0, 0" />

            <Label Text="InfectiousnessForDaysSinceOnsetOfSymptoms" FontSize="Caption" Padding="0, 8, 0, 0" />

            <Grid x:Name="InfectiousnessForDaysSinceOnsetOfSymptomsGrid"/>

            <Label Text="InfectiousnessWhenDaysSinceOnsetMissing" FontSize="Caption" Padding="0, 8, 0, 0" />

            <views:InfectiousnessPicker
                x:Name="InfectiousnessWhenDaysSinceOnsetMissing"
            />

            <Label Text="ReportTypeWhenMissing" FontSize="Caption" Padding="0, 8, 0, 0" />

            <views:ReportTypePicker
                x:Name="ReportTypeWhenMissing"
            />

        </StackLayout>
        
    </ContentView.Content>
</ContentView>
